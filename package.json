{
  "name": "api-seed",
  "version": "0.0.0",
  "description": "Seed for an easy and ready to go containerized GraphQL Koa API.",
  "main": "src/index.ts",
  "repository": "https://github.com/GlennyDC/api-seed",
  "author": "Glenny De Cock",
  "license": "MIT",
  "private": false,
  "scripts": {
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prd": "docker-compose -f docker-compose.prd.yml up --build",
    "prebuild": "rimraf dist/* && yarn run generate:gql-types",
    "build": "tsc -p tsconfig.json",
    "start": "cross-env NODE_ENV=production node -r source-map-support/register dist/index.js",
    "dev": "tsc-watch --noClear --onSuccess node ./dist/index.js",
    "test": "jest --expand --verbose",
    "generate:gql-types": "graphql-codegen --config codegen.yml",
    "watch:gql-types": "graphql-codegen --config codegen.yml --watch 'src/modules/**/*.typeDefs.ts'",
    "generate:docs": "typedoc src/",
    "lint": "eslint . --cache --ext .ts,.json",
    "lint:fix": "eslint . --cache --ext .ts,.json --fix"
  },
  "dependencies": {
    "@graphql-toolkit/file-loading": "^0.10.7",
    "apollo-server-koa": "^2.18.2",
    "bcryptjs": "^2.4.3",
    "cls-hooked": "^4.2.2",
    "dataloader": "^2.0.0",
    "graphql": "^15",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-helmet": "^6.0.0",
    "mongoose": "^5.10.3",
    "nanoid": "^3.1.16",
    "node-fetch": "^2.6.1",
    "source-map-support": "^0.5.19",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.1",
    "@graphql-codegen/cli": "1.15.4",
    "@graphql-codegen/typescript": "1.15.4",
    "@graphql-codegen/typescript-resolvers": "1.17.10",
    "@types/bcryptjs": "^2.4.2",
    "@types/cls-hooked": "^4.3.1",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.6",
    "@types/koa-helmet": "^6.0.1",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.14.2",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "cross-env": "^7.0.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.4.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "husky": ">=4",
    "jest": "^26.6.1",
    "lint-staged": ">=10",
    "prettier": "2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.3",
    "tsc-watch": "^4.2.9",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  }
}
